---
const { title = "Mitchell Bauer — IT Manager", description = "IT Manager delivering secure, cloud-first operations across multi-site manufacturing environments." } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <style>
      :root{
        /* Light, earthy palette */
        --bg: #EBF4DD;
        --header: #90AB8B;
        --element: #5A7863;
        --text: #3B4953;

        /* Derived tones (still based on the palette via alpha) */
        --panel: rgba(144, 171, 139, 0.22);
        --panel2: rgba(144, 171, 139, 0.14);
        --muted: rgba(59, 73, 83, 0.82);
        --muted2: rgba(59, 73, 83, 0.66);
        --line: rgba(90, 120, 99, 0.28);
        --link: var(--element);
        --max: 1024px;
        --radius: 18px;
        --shadow: 0 20px 50px rgba(59, 73, 83, 0.18);
      }
      html { scroll-behavior: smooth; }
      body{
        margin:0;
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial, "Apple Color Emoji","Segoe UI Emoji";
        background: radial-gradient(1200px 800px at 15% 5%, rgba(144,171,139,0.35), transparent 55%),
                    radial-gradient(900px 700px at 90% 30%, rgba(90,120,99,0.18), transparent 50%),
                    radial-gradient(600px 600px at 50% 80%, rgba(144,171,139,0.22), transparent 50%),
                    var(--bg);
        color: var(--text);
        line-height: 1.55;
      }
      a{ color: var(--link); text-decoration: none; }
      a:hover{ text-decoration: underline; text-decoration-color: var(--link); }
      .wrap{ max-width: var(--max); margin: 0 auto; padding: 24px; }
      .nav{
        position: sticky; top: 0; z-index: 10;
        backdrop-filter: blur(12px);
        background: rgba(144, 171, 139, 0.78);
        border-bottom: 1px solid var(--line);
      }
      .nav-inner{
        max-width: var(--max); margin: 0 auto; padding: 14px 24px;
        display:flex; align-items:center; justify-content: space-between; gap: 16px;
      }
      .brand{ font-weight: 700; letter-spacing: 0.2px; color: var(--text); }
      .brand a{ color: var(--text); }
      .nav a{ color: rgba(59, 73, 83, 0.86); font-size: 14px; }
      .nav a:hover{ color: var(--text); text-decoration: none; }
      .nav-links{ display:flex; gap: 14px; flex-wrap: wrap; justify-content: flex-end; }
      .pill{
        display:inline-flex; align-items:center; gap:10px;
        padding: 10px 12px;
        border: 1px solid var(--line);
        border-radius: 999px;
        background: rgba(235, 244, 221, 0.55);
        transition: all 0.2s ease;
      }
      .pill:hover{
        background: rgba(235, 244, 221, 0.8);
        border-color: rgba(90, 120, 99, 0.45);
      }
      .grid{ display:grid; gap: 18px; }
      .card{
        background: linear-gradient(180deg, var(--panel), var(--panel2));
        border: 1px solid var(--line);
        border-radius: var(--radius);
        padding: 18px;
        box-shadow: var(--shadow);
      }
      .hero{
        padding: 36px 0 10px;
      }
      .hero h1{ margin: 0 0 10px; font-size: clamp(32px, 5vw, 44px); letter-spacing: -0.8px; }
      .hero h2{ margin: 0 0 14px; font-size: 16px; font-weight: 600; color: var(--muted); }
      .hero p{ margin: 0; color: var(--muted); font-size: 16px; max-width: 80ch; }
      .cta{ margin-top: 18px; display:flex; gap: 10px; flex-wrap: wrap; }
      .btn{
        display:inline-flex; align-items:center; gap:10px;
        padding: 11px 16px;
        border-radius: 12px;
        border: 1px solid rgba(90, 120, 99, 0.55);
        background: rgba(235, 244, 221, 0.65);
        color: var(--element);
        font-weight: 500;
        transition: all 0.2s ease;
      }
      .btn:hover{
        background: rgba(235, 244, 221, 0.9);
        border-color: rgba(90, 120, 99, 0.8);
        text-decoration: none;
        transform: translateY(-1px);
      }
      .btn.primary{
        border-color: rgba(90, 120, 99, 0.9);
        background: rgba(90, 120, 99, 0.16);
        color: var(--element);
      }
      .btn.primary:hover{
        background: rgba(90, 120, 99, 0.22);
        box-shadow: 0 4px 20px rgba(90, 120, 99, 0.22);
      }
      section{ padding: 22px 0; }
      .section-title{
        display:flex; align-items: baseline; justify-content: space-between; gap: 12px;
        margin: 0 0 12px;
      }
      .section-title h3{ margin:0; font-size: 18px; letter-spacing: -0.2px; }
      .section-title span{ color: var(--muted2); font-size: 13px; }
      .muted{ color: var(--muted); }
      ul{ margin: 10px 0 0; padding-left: 18px; }
      li{ margin: 6px 0; color: var(--muted); }
      li::marker{ color: var(--element); }
      .kgrid{ display:grid; grid-template-columns: repeat(12, 1fr); gap: 14px; }
      .kgrid > * { grid-column: span 12; }
      @media (min-width: 860px){
        .kgrid > .span6 { grid-column: span 6; }
        .kgrid > .span4 { grid-column: span 4; }
        .kgrid > .span8 { grid-column: span 8; }
      }
      .tag{
        display:inline-block;
        padding: 6px 10px;
        border-radius: 999px;
        border: 1px solid rgba(90, 120, 99, 0.28);
        background: rgba(235, 244, 221, 0.55);
        color: var(--muted);
        font-size: 13px;
        margin: 6px 6px 0 0;
        transition: all 0.2s ease;
      }
      .tag:hover{
        border-color: rgba(90, 120, 99, 0.5);
        background: rgba(235, 244, 221, 0.85);
      }
      .footer{
        border-top: 1px solid var(--line);
        margin-top: 24px;
        padding: 18px 0 30px;
        color: var(--muted2);
        font-size: 13px;
      }
      .small{ font-size: 13px; color: var(--muted2); }
      .nowrap{ white-space: nowrap; }
    </style>
  </head>
  <body>
    <div class="nav">
      <div class="nav-inner">
        <div class="brand"><a href="/" aria-label="Home">bauerperception</a></div>
        <nav class="nav-links" aria-label="Primary navigation">
          <a class="pill" href="/#strengths">Strengths</a>
          <a class="pill" href="/#experience">Experience</a>
          <a class="pill" href="/#skills">Stack</a>
          <a class="pill" href="/#credentials">Credentials</a>
          <a class="pill" href="/#contact">Contact</a>
          <a class="pill" href="/blog">Blog</a>
        </nav>
      </div>
    </div>

    <main class="wrap">
      <slot />
      <footer class="footer">
        <div>© {new Date().getFullYear()} Mitchell Bauer. Built with Astro. Hosted on Cloudflare Pages.</div>
      </footer>
    </main>
  </body>
</html>
